{% extends 'layouts/layout.html.twig' %}

{% set metaTitle = collection.title %}
{% if collection.metaTitle != "" %}
    {% set metaTitle = collection.metaTitle %}
{% endif %}

{% do pimcore_head_title().prepend(metaTitle) %}
 {% do pimcore_head_meta().appendName('description', collection.metaDescription) %}
{% block content %}
    <div class="page page-blogpost-list">
        {# HERO #}
        <header id="hero" class="text-center mb-5">
            {% if collection.imageTeaser is defined and collection.imageTeaser is not null %}
                {% set heroImage = collection.imageTeaser.thumbnail('heroImage').html({
                    'imgAttributes': {
                        'class': 'd-none',
                        'id': 'hero-background'
                    },
                }) %}
                {{ heroImage|raw }}
            {% endif %}
        </header>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-xs-12">
                    {% if blogposts is not empty %}
                        <h1>{{ collection.title }}</h1>
                        <p>{{ collection.description|raw }}</p>
                        {% for post in blogposts %}
                            {% include 'content/_general/blogpost_list_item.html.twig' with {'post': post, 'size': 'wide' } %}
                        {% endfor %}
                        <div class="blogpost">

                        </div>
                    {% else %}
                        <p>No blog posts found in this collection.</p>
                    {% endif %}
                </div>
                <div class="col-lg-4 col-md-4 col-xs-12">
                    {# Collections #}
                    {% if collection|length > 0 %}
                        <h3>{{ 'blogpostList.recommendedCollections'|trans }}</h3>
                        <ul id="collections">
                            {% for collection in collections %}
                                <li>
                                    <a href="/{{ collection.slug }}">{{ collection.title }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {# Tags #}
                    {% include 'content/blogpost/aside/tag-list.html.twig' %}
                </div>
                </div>
        </div>
    </div>
{% endblock %}