{% for page in pages %}
    {% if editmode %}
        <div class="col-lg-3 col-xs-12 col-md-6 col-sm-6 item {{ page.document.key }}">
    {% else %}
        <a class="col-lg-3 col-xs-12 col-md-6 col-sm-6 item {{ page.document.key }}" href="{{ page.uri }}">
    {% endif %}
        <h2>{{ page.document.title }}</h2>
        {{ pimcore_wysiwyg("service-" ~ page.document.key, {
            placeholder: "Beschreibung",
            nl2br: true,
        }) }}
    {% if editmode %}
        </div>
    {% else %}
        </a>
    {% endif %}
{% endfor %}