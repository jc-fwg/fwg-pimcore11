{% set colSetup = "col-lg-6 col-xs-12 mb-4 px-4" %}
{% set colSetupImage = "col-lg-5 col-xs-12" %}
{% set colSetupContent = "col-lg-7 col-xs-12" %}

{% if size is defined and size == "wide" %}
    {% set colSetup = "col-xs-11 mb-4 px-2" %}
    {% set colSetupImage = "col-lg-4 col-xs-12" %}
    {% set colSetupContent = "col-lg-8 col-xs-12" %}
{% endif %}

<div class="{{ colSetup }}">
    <div class="post-list-item shadow-sm bg-light row p-2">
        <div class="{{ colSetupImage }}">
            {% if post.imageMain is not null %}
                {{ post.imageMain.thumbnail('blogpost-list-thumbnail').html(
                    {
                        'imgAttributes': {
                            'class': 'img-fluid mt-2',
                            'alt': post.title
                        }
                    }
                )|raw }}
            {% endif %}
        </div>
        <div class="post-list-item-content {{ colSetupContent }}">
            <h3>{{ post.title }}</h3>
            <h4>{{ post.subTitle }}</h4>
            <i class="bi bi-calendar3 pr-2"></i> {{ post.publicationDate|date('d.m.Y', 'Europe/Berlin') }}, {% for author in post.authors %}{{ author.name }}{% endfor %}
            <p class="pt-2">
                {% if post.previewText is not null %}
                    {{ shortenByWordCount(post.previewText, 23) }}
                {% endif %}
            </p>
            <a href="{{ post.detailLink }}"
               class="btn btn-secondary btn-sm col-md-6 col-xs-12 pt-2 pb-2">
                Mehr erfahren
            </a>
        </div>
    </div>
</div>