{% do pimcore_head_meta().setProperty('og:title', openGraph.title) %}
{% do pimcore_head_meta().setProperty('og:description', openGraph.description) %}
{% do pimcore_head_meta().setProperty('og:image', openGraph.image) %}
{% do pimcore_head_meta().setProperty('og:image:width', openGraph.imageWidth) %}
{% do pimcore_head_meta().setProperty('og:image:height', openGraph.imageHeight) %}
{% do pimcore_head_meta().setProperty('og:url', openGraph.url) %}
{% do pimcore_head_meta().setProperty('og:type', openGraph.type) %}
{% do pimcore_head_meta().setProperty('og:locale', openGraph.locale) %}
{% do pimcore_head_meta().setProperty('og:site_name', openGraph.siteName) %}

{# ARTICLE #}
{% if openGraph.type == 'article' %}
    {% do pimcore_head_meta().setProperty('article:published_time', openGraph.publishedTime.format('c')) %}
    {% for author in openGraph.authors %}
        {% do pimcore_head_meta().appendProperty('article:author', author.name) %}
    {% endfor %}
    {% for tag in openGraph.tags %}
        {% if tag.hideInList == false %}
            {% do pimcore_head_meta().appendProperty('article:tag', tag.name) %}
        {% endif %}
    {% endfor %}
{% endif %}